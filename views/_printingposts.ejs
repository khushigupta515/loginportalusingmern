
    <% if(posts){for (let post of posts){ %>  
       
            
                <div class="post">
                    <%= post.content%> 
                    <p style="text-align: left;font-weight: lighter;">Content created By: <%= post.user.fn%> <%= post.user.ln%>  </p>
                       <div class="comments" style="font-size: x-small;">
                            <h3>Comments:</h3>
                            <%if(post.comments){for (let i of post.comments){%> 
                            <div style="text-align: left;font-weight: lighter;padding:0%;">
                                <%=i.byuser.fn%> <%=i.byuser.ln%> commented : <%=i.comment%>
                                <%if (locals.user._id.equals(i.byuser._id)){ %><br>
                                    <form id="formfordeletingcomment" method="get" action="/deletingcomment" style="display: inline-flex;margin-right: 0%;" >
                                        <input type="hidden" name="comment_id_to_be_deleted" value="<%=i._id%>">
                                        <input type="submit" value="Delete Comment">
                                    </form>
                                    <form id="formforupdatingcomment" method="get" action="/updatingcomment" style="display: inline-flex;margin-left: 0%;" >
                                        <input type="hidden" name="comment_id_to_be_deleted" value="<%=i._id%>">
                                        <input type="submit" value="Edit Comment">
                                    </form>
                                <%}%>
                            </div>
                            <%}}%>
                       </div>
                     <%if(locals.user){%>  
                    <form id="formforcommenting" method="get" action="/addcommenttopost">
                        <input type="hidden" name="postid" value="<%=post.id %>">
                         <input type="text" name="comment" required ><br>
                         <input type="submit" value="Add Comment"><br>
                        
                    </form>
                    <%}%>
                    
                   </div>
                   
                   <%if(locals.user._id.equals(post.user._id)){%>
                   
                   <form id="formfordeletingpost" method="get" action="/deletingpost" style="display: inline-flex;margin-right: 0%;">
                        <input type="hidden" name="post_id_to_be_deleted" value="<%=post._id%>">
                        <input type="submit" value="Delete Post">
                   </form>
                   <form id="formfordeletingpost" method="get" action="/updatingpost" style="display: inline-flex;margin-left: 0%;">
                    <input type="hidden" name="post_id_to_be_deleted" value="<%=post._id%>">
                    <input type="submit" value="Update Post">
                   </form>
                   <%}%>
              
            
        
      
    <% } }%>

